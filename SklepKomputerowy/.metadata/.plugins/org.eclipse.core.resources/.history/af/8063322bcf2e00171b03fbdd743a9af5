package Logika;

import java.util.Vector;

public class Klient extends Osoba {

	private Vector<Produkt> koszyk = new Vector<Produkt>();
	
	public void dodajProdukt( Produkt produkt){
		koszyk.add(produkt);
	}
	
	public boolean usunProdukt(int pozycjaWKoszyku){
		if( koszyk.get(pozycjaWKoszyku).pobierzCzySprzedane()){
			koszyk.remove(produkt);
			return true;
		}
		
		return false;
	}
	
	@Override
	public boolean equals(Object o) {
		Klient k = (Klient) o;
		return this.pobierzPESEL() == k.pobierzPESEL();
	}
}
